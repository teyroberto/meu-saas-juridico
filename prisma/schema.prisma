generator client {
  provider   = "prisma-client-js"
  engineType = "library" 
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  clientes  Cliente[]
  processos Processo[]

  @@map("usuarios")
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String?  @unique
  telefone  String?
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int

  @@map("clientes")
}

model Processo {
  id        Int      @id @default(autoincrement())
  numero    String   @unique
  titulo    String
  status    String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int

  @@map("processos")
}